<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified"
    xmlns:layout="sap.ui.layout"
    controllerName="ui5.crypto.ui5cryptotest.controller.View1"
    displayBlock="true">
    <Shell>
        <App>
            <Page
                title="{i18n>title}"
                class="sapUiContentPadding">
                <layout:Grid>
                    <unified:FileUploader
                        change="handleFileChange"
                        width="100%">
                        <unified:layoutData>
                            <layout:GridData span="L6 M6 S12" />
                        </unified:layoutData>
                    </unified:FileUploader>
                    <TextArea
                        value="{/target}"
                        editable="false"
                        rows="10"
                        width="100%">
                        <layoutData>
                            <layout:GridData span="L12 M12 S12" />
                        </layoutData>
                    </TextArea>
                    <Button
                        enabled="{= !!${/target} }"
                        text="{i18n>Verify}"
                        press="handleVerify"
                        width="100%">
                        <layoutData>
                            <layout:GridData span="L2 M4 S6" />
                        </layoutData>
                    </Button>
                    <ObjectStatus
                        state="{/state}"
                        icon="{= ${/state} ? 'sap-icon://message-success' : 'sap-icon://message-error'}"
                        class="sapUiTinyMarginTop">
                        <layoutData>
                            <layout:GridData span="L2 M2 S1" />
                        </layoutData>
                    </ObjectStatus>
                    <Button
                        enabled="{= !!${/target} }"
                        text="{i18n>DownloadSigned}"
                        press="handleDownload"
                        width="100%">
                        <layoutData>
                            <layout:GridData
                                span="L2 M4 S6"
                                linebreak="true" />
                        </layoutData>
                    </Button>
                </layout:Grid>
            </Page>
        </App>
    </Shell>
</mvc:View>